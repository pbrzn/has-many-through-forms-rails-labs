<h1><%= @post.title %></h1>

<%= @post.content %>
<br>

<ul>
  <% @post.categories.each do |category| %>
    <li><%= category.name %></li>
  <% end %>
</ul>

<h3>Comments:</h3>

<% @post.users.uniq.each do |user| %>
  <%= link_to user.username, user_path(user) %> says: <br>
  <ul>
    <% user.comments.each do |comment| %>
      <li><%= comment.content if comment.post_id == @post.id %></li>
    <% end %>
  </ul>
<% end %>

<h3>Add A Comment:</h3>
<%= render 'comments', comment: Comment.new %>
